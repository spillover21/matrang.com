<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force index.php as primary DirectoryIndex (before index.html)
  DirectoryIndex index.php index.html

  # Social media crawlers → PHP OG renderer (bypass Hostinger WAF/anti-bot)
  # Must be FIRST rule - before DirectoryIndex kicks in
  RewriteCond %{HTTP_USER_AGENT} facebookexternalhit|Facebot|WhatsApp|Twitterbot|LinkedInBot|Pinterest|Slackbot|TelegramBot|vkShare|Viber|Discordbot [NC]
  RewriteRule ^(index\.html)?$ /og-render.php [L]
  
  # Маршрут для страницы подписания
  RewriteRule ^sign$ sign.html [QSA,L]
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.php [QSA,L]
</IfModule>

# LiteSpeed anti-bot: whitelist social media crawlers
<IfModule LiteSpeed>
  RewriteEngine On
  RewriteCond %{HTTP_USER_AGENT} facebookexternalhit|Facebot|WhatsApp [NC]
  RewriteRule .* - [E=noabort:1,E=noconntimeout:1]
</IfModule>

<IfModule mod_mime.c>
  AddType application/javascript js mjs
  AddType text/css css
  AddType image/svg+xml svg
  AddType font/woff2 woff2
  AddType font/woff woff
  AddType image/jpeg jpg jpeg
  AddType image/png png
  AddType image/gif gif
  AddType image/x-icon ico
</IfModule>

<FilesMatch "\.(js|css|svg|woff2|woff|jpg|jpeg|png|gif|ico)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

<FilesMatch "\.html$">
  Header set Cache-Control "public, max-age=0, must-revalidate"
</FilesMatch>
